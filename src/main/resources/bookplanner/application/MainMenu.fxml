<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="backGround" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="261.0"
      prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bookplanner.controllers.MainMenuController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <VBox prefHeight="200.0" prefWidth="100.0"/>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" minHeight="0.0" minWidth="261.0" prefWidth="1080.0" VBox.vgrow="ALWAYS">
            <ImageView fx:id="title" fitHeight="150.0" fitWidth="600.0" pickOnBounds="true"
                       preserveRatio="true"/>
        </VBox>
        <VBox alignment="CENTER" prefWidth="1080.0" spacing="30.0" VBox.vgrow="ALWAYS">
            <Button fx:id="newProjectButton" minHeight="30.0" minWidth="120.0" mnemonicParsing="false"
                    onAction="#switchToNewProject" prefHeight="40.0" prefWidth="200.0" text="NEW PROJECT"
                    textFill="#f5e69e" pickOnBounds="false">
                <font>
                    <Font name="Consolas Bold" size="18.0"/>
                </font>
            </Button>
            <Button fx:id="LoadProjectButton" minHeight="30.0" minWidth="120.0" mnemonicParsing="false"
                    onAction="#switchToLoadProject" prefHeight="40.0" prefWidth="200.0" text="LOAD PROJECT"
                    pickOnBounds="false">
                <font>
                    <Font name="Consolas Bold" size="18.0"/>
                </font>
            </Button>
            <Button fx:id="settingsButton" minHeight="30.0" minWidth="120.0" mnemonicParsing="false"
                    onAction="#switchToSettings" prefHeight="40.0" prefWidth="200.0" text="SETTINGS"
                    pickOnBounds="false">
                <font>
                    <Font name="Consolas Bold" size="18.0"/>
                </font>
            </Button>
            <Button fx:id="exitButton" cancelButton="true" minHeight="30.0" minWidth="120.0"
                    mnemonicParsing="false" onAction="#exit" prefHeight="40.0" prefWidth="200.0" text="EXIT"
                    pickOnBounds="false">
                <font>
                    <Font name="Consolas Bold" size="18.0"/>
                </font>
            </Button>
        </VBox>
        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <ImageView fx:id="logo" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </ImageView>
            <Label text="Work in progress">
                <font>
                    <Font size="10.0"/>
                </font>
            </Label>
        </VBox>
    </VBox>
    <VBox prefHeight="200.0" prefWidth="100.0"/>
</HBox>
